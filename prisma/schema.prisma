generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Order {
  id        String   @id @default(uuid())
  pair      String
  amount    Float
  side      String
  status    String   @default("pending") // pending, routing, submitted, confirmed, failed
  dex       String?
  txHash    String?
  price     Float?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}